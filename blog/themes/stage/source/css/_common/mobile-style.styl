@media screen and (max-width: 768px)
  #header
    height 47px
    margin-bottom 17px
    .header-main
      width 100%
      height 47px
      box-shadow 0 1px 1px rgba(0, 0, 0, 0.4)
      position fixed
      z-index 7
    .menu
      position fixed
      top 11px
      z-index 9
    h1
      padding-top 13px
      font-size 20px
  #nav
    display none
  #post
    width 100%
    padding 14px
  #toc
    display none
  .post-item
    padding 14px 14px 27px
