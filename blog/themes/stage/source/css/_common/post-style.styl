.post-item, #post
  .video-container
    position relative
    overflow hidden
    padding-top 57%
    iframe
      width 100%
      height 100%
      position absolute
      left 0
      top 0
  .pullquote.left
    float left
    width 47%
    margin-top 10px
  .pullquote.right
    float right
    width 47%
    margin-top 10px
    margin-left 7px
  h1, h2, h3, h4, h5, h6
    font-weight 600
    padding 7px 0
    margin 17px 0 7px
  h1, h2, h3
    border-bottom 1px solid #eaecef
  h1
    font-size 24px
  h2
    font-size 22px
  p
    line-height 2
    padding 7px 0
    a
      color $stage-theme-color
      font-weight 600
  ul
    list-style circle
    padding-left 42px
    li
      line-height 1.7
  ol
    list-style decimal
    padding-left 42px
  li
    line-height 1.7
  dl
    padding-left 27px
    line-height 1.7
    dt
      font-weight 600
    dd
      padding-left 17px
  table
    width 100%
    border-collapse collapse
    margin 17px 0
    font-size 14px
    word-break break-all
    table-layout fixed
  tbody tr
    transition background-color 0.4s
    &:hover
      background-color  #eaecef
  tr th
    border 1px solid #ccc
    font-size 15px
    padding 14px 7px
    font-weight 600
    line-height 2
  tr td
    border 1px solid #ccc
    padding 14px 7px
    line-height 2
  img
    max-width 100%
    margin 7px auto
    display block